generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id       String @id @default(uuid())
  name     String
  email    String
  password String
}

model nonReccurTask {
  id           String   @id @default(uuid())
  category     String?
  subcategory  String?
  type         String?
  site         String?
  stage        String?
  priority     String?
  task         String?  @db.VarChar(255)
  remark       String?  @db.VarChar(255)
  assignTaskTo String?  @db.VarChar(255)
  duedate      String?
  taskOwner    String?
  tasktype     String   @default("Non-Recurring") // Add the tasktype column with a default value of "recur"
  createdAt    DateTime @default(now())
}

model notes {
  id        Int      @id @default(autoincrement())
  title     String
  notes     String
  priority  String
  duedate   String
  createdAt DateTime @default(now())
}

model customization {
  id         Int     @id @default(autoincrement())
  variables  String  @db.VarChar(255)
  department String? @db.VarChar(255)
  options    String
}

model reccurTask {
  id           String  @id @default(uuid())
  category     String?
  subcategory  String?
  type         String?
  site         String?
  stage        String?
  priority     String?
  task         String? @db.VarChar(255)
  remark       String? @db.VarChar(255)
  assignTaskTo String? @db.VarChar(255)
  reccur       String?
  startDate    String?
  EndDate      String?
  taskOwner    String?
  tasktype     String  @default("Recurring") // Add the tasktype column with a default value of "recur"

  createdAt DateTime @default(now())
}
